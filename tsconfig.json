{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["frontend/**/*.ts", "frontend/**/*.tsx"],
  "exclude": ["node_modules", "build"]
}
